---
import ChatSVG from "@svg/dailyui-001-svg/Chat.astro";
---

<section id="contact" class="bg-white py-12 px-6 md:px-12">
  <div class="container mx-auto">
    <!-- Title -->
    <div class="text-center max-w-2xl mx-auto mb-12">
      <h2
        class="text-4xl md:text-5xl font-extrabold text-gray-800 leading-tight mb-4"
      >
        Contact us <span class="text-indigo-600">anytime</span>
      </h2>
      <p class="text-gray-600 text-lg">
        Have a question, suggestion, or need assistance? Fill out the form, and we'll get back to you as soon as possible.
      </p>
    </div>

    <!-- Main container -->
    <div
      class="bg-gray-50 rounded-2xl shadow-lg p-6 md:p-10 max-w-5xl mx-auto flex flex-col md:flex-row items-center space-y-8 md:space-y-0 md:space-x-8"
    >
      <!-- SVG Image -->
      <div class="w-full md:w-1/2 flex justify-center">
        <ChatSVG class="w-full max-w-sm md:max-w-md" />
      </div>

      <!-- Form -->
      <form action="#" method="POST" class="w-full md:w-1/2 space-y-6">
        <!-- Full Name -->
        <div>
          <label
            for="name"
            class="block text-sm font-medium text-gray-700 mb-1"
          >
            Full Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            aria-label="Full Name"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
            placeholder="Your full name"
            required
          />
        </div>

        <!-- Email -->
        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-700 mb-1"
          >
            Email Address
          </label>
          <input
            type="email"
            id="email"
            name="email"
            aria-label="Email Address"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
            placeholder="youremail@example.com"
            required
          />
        </div>

        <!-- Message -->
        <div>
          <label
            for="message"
            class="block text-sm font-medium text-gray-700 mb-1"
          >
            Message
          </label>
          <textarea
            id="message"
            name="message"
            aria-label="Message"
            rows="4"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 focus:ring-indigo-500 focus:border-indigo-500"
            placeholder="Write your message here..."
            required></textarea>
        </div>

        <!-- Button -->
        <div class="text-center">
          <button
            type="submit"
            class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 focus:outline-none transition-transform duration-300 hover:scale-105"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
