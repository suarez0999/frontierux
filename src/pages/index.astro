---
import Layout from "../layouts/Layout.astro";
import FeaturedDailyUIChallenges from "@components/FeaturedDailyUIChallenges.astro";
import FeaturedFrontendMentorChallenges from "@components/FeaturedFrontendMentorChallenges.astro";
import SectionContainer from "@ui/SectionContainer.astro";
import SectionTitle from "@ui/SectionTitle.astro";
---

<Layout>
  <!-- Hero Section -->
   <section class=" bg-gradient-to-b from-blue-500 to-indigo-600 text-white">
    <SectionContainer id="home" class="py-16 md:py-28">
      <header class="text-center space-y-6">
        <h1 class="text-4xl md:text-5xl font-extrabold animate-fade-in">
          <span class="flex items-center justify-center space-x-2">
            <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-comet w-10 h-10"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15.5 18.5l-3 1.5l.5 -3.5l-2 -2l3 -.5l1.5 -3l1.5 3l3 .5l-2 2l.5 3.5z" /><path d="M4 4l7 7" /><path d="M9 4l3.5 3.5" /><path d="M4 9l3.5 3.5" /></svg>
            <span>Frontend Challenges</span>
          </span>
        </h1>
        <p class="max-w-3xl mx-auto text-lg md:text-xl animate-slide-up">
          Showcase of frontend challenges completed to refine UI/UX design and coding skills. Explore these projects and get inspired!
        </p>
      </header>
    </SectionContainer>
   </section>
 

  <!-- Daily UI Section -->
  <SectionContainer id="daily-ui" class="py-16">
    <div class="space-y-6">
      <SectionTitle>
        <span class="flex items-center space-x-2">
          <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-comet w-8 h-8 text-indigo-500"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15.5 18.5l-3 1.5l.5 -3.5l-2 -2l3 -.5l1.5 -3l1.5 3l3 .5l-2 2l.5 3.5z" /><path d="M4 4l7 7" /><path d="M9 4l3.5 3.5" /><path d="M4 9l3.5 3.5" /></svg>
          <span>Daily UI Challenges</span>
        </span>
      </SectionTitle>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        Explore frontend challenges inspired by <a href="https://www.dailyui.co/" class="text-indigo-600 font-semibold underline hover:text-indigo-800">Daily UI</a>, each designed to sharpen your UI/UX design skills.
      </p>
    </div>
    <FeaturedDailyUIChallenges />
  </SectionContainer>

  <!-- Frontend Mentor Section -->
  <SectionContainer id="frontend-mentor" class="py-16 ">
    <div class="space-y-6">
      <SectionTitle>
        <span class="flex items-center space-x-2">
          <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-comet w-8 h-8 text-indigo-500"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15.5 18.5l-3 1.5l.5 -3.5l-2 -2l3 -.5l1.5 -3l1.5 3l3 .5l-2 2l.5 3.5z" /><path d="M4 4l7 7" /><path d="M9 4l3.5 3.5" /><path d="M4 9l3.5 3.5" /></svg>
          <span>Frontend Mentor Challenges</span>
        </span>
      </SectionTitle>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        Discover coding challenges completed from <a href="https://www.frontendmentor.io/" class="text-indigo-600 font-semibold underline hover:text-indigo-800">Frontend Mentor</a>, crafted to enhance frontend development and problem-solving skills.
      </p>
    </div>
    <FeaturedFrontendMentorChallenges />
  </SectionContainer>
</Layout>
